<div class="content">
  <div class="width-set">
    <%= link_to 'Statistics', '/articles/statistics' %>

    <hr>

    <h1 class="section-header"> All articles </h1>
      <p><%= @articles_length %> articles.</p>
      <% @newest.each do |article| %>
        <% if @newest[0] != article %>
        <br>
        <%end %>
        
        <% mp = find_mp(article.mp_id) %>

        <h2><%= link_to article.headline, article.url, :target => "_blank" %></h2>
        <p> <%= link_to mp.name + ' MP', mp_path(mp.slug) %> | <%= article.datetime.strftime('%d / %m / %Y') %> </p>
        
        <% if @newest[-1] != article %>
        <hr>
        <%end %>
      <% end %>
  </div>
  <br>
    <%= paginate @newest %>
  </div>
  <br><br>
</div>
